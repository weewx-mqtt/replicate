{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Specific test",
            "type": "debugpy",
            "request": "launch",
            //"program": "${file}",
            "program": "bin/user/tests/unit/test_mqttresponderloopthread.py",
            "console": "integratedTerminal",
            "args": [
                //"TestInit",
                //"test_PublishWeeWX_stanza_is_deprecated",

                "TestMQTTResponderLoopThread",
                "test_on_message",
            ],
        },        
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "requester",
            "type": "debugpy",
            "request": "launch",
            "program": "bin/user/run_mqttreplicate.py",
            "args": [
                "requester",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Install",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}/../weewx/src/weectl.py",
            "args": [
                "extension",
                "install",
                "${workspaceFolder}",
                "--verbosity=3",
                "--dry-run",
                "--yes",
                //"--config", "~/weewx-data/weewx.conf"               
                //"--config", "${workspaceFolder}/tmp/weewx.conf",
            ],            
            "console": "integratedTerminal"
        },        
        {
            "name": "request replicate",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "request",
                "--conf",
                "~/weewx-data/run/weewx.conf",
                //"--timestamp", "0",
            ]
        },
        {
            "name": "respond replicate",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "respond",
                "--conf",
                "~/weewx-data/run/weewx.conf",
            ]
        },
        {
            "name": "weewxd: Full install",
            "type": "debugpy",
            "request": "launch",
            "program": "~/weewx/src/weewxd.py",
            "args": [
                "--config",
                "~/weewx-data/weewx.conf"
            ],
            "console": "integratedTerminal"
        },
    ]
}